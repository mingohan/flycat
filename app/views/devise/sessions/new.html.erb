<div class="card">
  <div class="card-header">
    <h2>員工登入</h2>
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form-grop">
    <%= f.label :email, "員工信箱" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"form-control", placeholder:"Email" %>
  </div>

  <div class="field form-grop">
    <%= f.label :password, "登入密碼" %>
    <%= f.password_field :password, autocomplete: "current-password",class:"form-control", placeholder:"請填寫密碼" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field form-check">
      <%= f.check_box :remember_me, class: "form-check-input" %>
      <%= f.label :記住信箱%>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" ,class: 'btn btn-warning'%>
  </div>
  </br>
<% end %>

<%= render "devise/shared/links" %>


  </div>
</div>


